# I was here

super + Return
    alacritty -e zsh -ic 't $(zoxide query -l | fzf)'

super + space
	rofi -show drun

super + w
	redshift -P -O 6500

super + r
    redshift -P -O 1000

super + s
    flameshot gui

super + b
	firefox

{F10,F11}
    connect_headphones

F8
    connect_wifi

# bspwm hotkeys

super + shift + {c,r}
	bspc {quit,wm -r}

super + q
	bspc node -c

super + i
	bspc node -R 90

super + shift + i
	bspc node -R -90

super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

super + g
	bspc node -s biggest.window

super + {t,shift + f,f}
	bspc node -t {tiled,floating,fullscreen}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

super + ctrl + {h,j,k,l}
	bspc node -z {left -80 0,bottom 0 80, top 0 -80,right 80 0}

super + alt + {h,j,k,l}
	bspc node -z {right -80 0, top 0 80, bottom 0 -80,left 80 0}

F1
    pactl set-sink-mute @DEFAULT_SINK@ toggle

F2
    pactl set-sink-volume @DEFAULT_SINK@ -5% && notify-send "Decreasing Volume"

F3
    pactl set-sink-volume @DEFAULT_SINK@ +5% && notify-send "Increasing Volume"
